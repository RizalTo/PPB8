<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/view1"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginStart="164dp"
        android:layout_marginBottom="572dp"
        app:cardBackgroundColor="#DF2D30"
        app:cardCornerRadius="100dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/teksNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:text="Rizal Torhino"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/teksNIM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif"
            android:text="A11.2021.13260"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="normal" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/teksDeskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil Pribadi"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#DE2D30"
            app:cardCornerRadius="50dp"
            app:contentPaddingTop="20dp">

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/teksDeskripsi2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Halo Semua! Saya Rizal Torhino, Mahasiswa UNIVERSITAS DIAN NUSWANTORO Prodi S1 Teknik Informatika asal Purwodadi. Saya sedang belajar Android Studio"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/teksHobi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Hobby"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardHobi"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#DE2D30">

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/teksHobi2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Bermain Game Menonton Film "
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardFoto"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="550dp"
        app:cardBackgroundColor="#DF2D30"
        app:cardCornerRadius="100dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/fotoSaya"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:cropToPadding="true"
            android:duplicateParentState="false"
            android:elevation="8dp"
            app:srcCompat="@drawable/foto_jas_hitam" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/view1"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="150dp"
        app:cardBackgroundColor="#000000"
        app:cardCornerRadius="100dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonTelepon"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#DE2D30"
            android:padding="0dp"
            app:icon="@android:drawable/stat_sys_phone_call"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/buttonEmail"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#DE2D30"
            android:padding="0dp"
            app:icon="@android:drawable/ic_dialog_email"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/buttonAlamat"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#DE2D30"
            android:padding="0dp"
            app:icon="@android:drawable/ic_dialog_map"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="#FFFFFF" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>